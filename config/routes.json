{
    "": {
        "controller": "Post",
        "method": "getAll"
    },
    "posts": {
        "controller": "Post",
        "method": "getAll"
    },
    "posts/:page": {
        "controller": "Post",
        "method": "getAllWithPage",
        "params": {
          "page": "number"
        }
    },
    "post/:id": {
        "controller": "Post",
        "method": "getOne",
            "params": {
                "id": "number"
            }
    },
    "posts/search": {
        "controller": "Post",
        "method": "search"
    },
    "type/:t":{
        "controller": "Post",
        "method": "getByType",
        "params": {
            "t": "string"
        }
    },
    "login": {
        "controller": "User",
        "method": "login"
    },
    "logout":{
        "controller": "User",
        "method": "logout"
    },
    "dashboard": {
        "controller": "Post",
        "method": "createPost"
    },
    "tags/:id": {
        "controller": "Post",
        "method": "getByTag",
        "params": {
            "id": "number"
        }
    },
    "update/post": {
        "controller": "Post",
        "method": "editPost"
    },
    "delete/post": {
        "controller": "Post",
        "method": "deletePost"
    }
}